rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        firestore.exists(/databases/(default)/documents/admins/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    function isValidProductImage() {
      return request.resource.contentType.matches('image/(jpeg|png|webp)') &&
             request.resource.size < 5 * 1024 * 1024; // 5MB max for products
    }
    
    // =============================================================================
    // PROFILE AVATARS
    // =============================================================================
    match /profile_avatars/{fileName} {
      allow read: if true;
      // Extract userId from filename (e.g., "abc123.jpg" -> check if user is "abc123")
      allow write: if isAuthenticated() && isValidImage();
    }
    
    // =============================================================================
    // PROFILE BANNERS
    // =============================================================================
    match /profile_banners/{fileName} {
      allow read: if true;
      // Allow authenticated users to upload their own banners
      allow write: if isAuthenticated() && isValidImage();
    }
    
    // =============================================================================
    // DEVICE SHOP IMAGES
    // =============================================================================
    
    // Product images - public read, admin write
    match /shop_products/{productId}/{imageId} {
      allow read: if true;
      allow write: if isAdmin() && isValidProductImage();
      allow delete: if isAdmin();
    }
    
    // Seller logos - public read, admin write
    match /shop_sellers/{sellerId}/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidProductImage();
      allow delete: if isAdmin();
    }
    
    // Review images - public read, authenticated user write (own reviews)
    match /review_images/{reviewId}/{imageId} {
      allow read: if true;
      allow write: if isAuthenticated() && isValidImage();
      allow delete: if isAuthenticated();
    }
    
    // =============================================================================
    // POST IMAGES
    // =============================================================================
    match /post_images/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated() && isValidImage();
      allow delete: if isAuthenticated();
    }
    
    // =============================================================================
    // WIDGET ASSETS
    // =============================================================================
    // Widget assets require ownership validation via Firestore lookup
    // The widgetId must exist in Firestore and be owned by the uploading user
    match /widget_assets/{widgetId}/{fileName} {
      allow read: if true;
      // Write allowed if:
      // 1. User is authenticated
      // 2. Image is valid
      // 3. User is admin OR user owns the widget (authorId matches)
      allow write: if isAuthenticated() && isValidImage() &&
        (isAdmin() || 
         firestore.get(/databases/(default)/documents/widgets/$(widgetId)).data.authorId == request.auth.uid);
      // Delete allowed only for admin or widget owner
      allow delete: if isAuthenticated() &&
        (isAdmin() || 
         firestore.get(/databases/(default)/documents/widgets/$(widgetId)).data.authorId == request.auth.uid);
    }
    
    // =============================================================================
    // TEMP UPLOADS (for processing)
    // =============================================================================
    match /temp_uploads/{userId}/{fileName} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) && isValidImage();
      allow delete: if isOwner(userId) || isAdmin();
    }

    // =============================================================================
    // STORY MEDIA (ephemeral content)
    // =============================================================================
    
    // Story media - stored at stories/{userId}/{storyId}/media.*
    match /stories/{userId}/{storyId}/{fileName} {
      // Public read for story media
      allow read: if true;
      
      // Only owner can write their story media
      allow write: if isOwner(userId) && 
        (request.resource.contentType.matches('image/.*') ||
         request.resource.contentType.matches('video/.*')) &&
        request.resource.size < 50 * 1024 * 1024; // 50MB max for videos
      
      // Owner can delete their story media
      allow delete: if isOwner(userId);
    }

    // =============================================================================
    // SIGNAL IMAGES (ephemeral mesh signals)
    // =============================================================================
    
    // Temporary signal images for validation (before final upload)
    match /signal_images_temp/{fileName} {
      // Public read for validation
      allow read: if true;
      
      // Authenticated users can upload for validation
      allow write: if isAuthenticated() && isValidImage();
      
      // Auto-cleanup or owner can delete
      allow delete: if isAuthenticated();
    }
    
    // Signal images - stored at signals/{userId}/{signalId}.jpg
    match /signals/{userId}/{fileName} {
      // Public read for signal images (needed for mesh recipients to download)
      allow read: if true;
      
      // Only owner can upload their signal images
      allow write: if isOwner(userId) && isValidImage();
      
      // Owner can delete their signal images
      allow delete: if isOwner(userId);
    }

    // =============================================================================
    // BUG REPORT SCREENSHOTS
    // =============================================================================
    match /bug_reports/{userId}/{fileName} {
      // Owner can read their own uploads (needed for getDownloadURL after upload)
      // Admins can read all reports
      allow read: if isAdmin() || isOwner(userId) || userId == 'anonymous';
      // Allow anyone to submit bug reports (including anonymous users)
      allow write: if (userId == 'anonymous' || isOwner(userId)) && isValidImage();
      allow delete: if isOwner(userId) || isAdmin();
    }
  }
}
