# Environment Template
# Copy this file to .env and fill in your values

# RevenueCat Configuration
# Get API keys from: https://app.revenuecat.com > Settings > API Keys
REVENUECAT_IOS_API_KEY=appl_YOUR_IOS_API_KEY
REVENUECAT_ANDROID_API_KEY=goog_YOUR_ANDROID_API_KEY

# RevenueCat Product IDs (matches App Store Connect)
# Product IDs (same for Test and Production - matches App Store Connect)
THEME_PACK_PRODUCT_ID=theme_pack
RINGTONE_PACK_PRODUCT_ID=ringtone_pack
WIDGET_PACK_PRODUCT_ID=widget_pack
AUTOMATIONS_PACK_PRODUCT_ID=automations_pack
IFTTT_PACK_PRODUCT_ID=ifttt_pack
COMPLETE_PACK_PRODUCT_ID=complete_pack

# API Base URL
API_BASE_URL=https://api.yourapp.com

# Widget Marketplace URL (use localhost:3001 for local dev)
MARKETPLACE_URL=http://localhost:3001/widgets

# Logging Configuration
# Set to 'false' to disable verbose BLE logging
BLE_LOGGING_ENABLED=false

# Set to 'false' to disable protocol service logging (FromRadio, config complete, etc.)
PROTOCOL_LOGGING_ENABLED=false

# Set to 'false' to disable widget builder drag/drop logging
WIDGET_BUILDER_LOGGING_ENABLED=true

# Set to 'false' to disable Live Activity logging
LIVE_ACTIVITY_LOGGING_ENABLED=false

# Set to 'false' to disable Automations logging
AUTOMATIONS_LOGGING_ENABLED=true

# Set to 'false' to disable Messages logging  
MESSAGES_LOGGING_ENABLED=false

# Set to 'false' to disable IFTTT logging
IFTTT_LOGGING_ENABLED=false

# Set to 'false' to disable Telemetry logging
TELEMETRY_LOGGING_ENABLED=false

# Set to 'false' to disable Connection status logging
CONNECTION_LOGGING_ENABLED=false

# Set to 'false' to disable Nodes logging  
NODES_LOGGING_ENABLED=false

# Set to 'false' to disable Channels logging
CHANNELS_LOGGING_ENABLED=false

# Set to 'false' to disable App lifecycle logging
APP_LOGGING_ENABLED=false

# Set to 'false' to disable Subscriptions/Purchase logging
SUBSCRIPTIONS_LOGGING_ENABLED=false

# Set to 'false' to disable Notifications logging
NOTIFICATIONS_LOGGING_ENABLED=false

# Set to 'false' to disable Audio logging
AUDIO_LOGGING_ENABLED=false

# Set to 'false' to disable Maps/Offline maps logging
MAPS_LOGGING_ENABLED=false

# Set to 'false' to disable Firmware update logging
FIRMWARE_LOGGING_ENABLED=false

# Set to 'false' to disable Settings logging
SETTINGS_LOGGING_ENABLED=false

# Set to 'false' to disable Debug/misc logging
DEBUG_LOGGING_ENABLED=false

# Admin/Debug Mode - enables hidden developer features
# Set to 'true' to enable:
#   - Animated mesh node playground in Settings
#   - Test push notification button
#   - Automation debug panel and export features
ADMIN_DEBUG_MODE=false
